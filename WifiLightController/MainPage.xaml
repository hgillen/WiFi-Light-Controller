        <Button Content="Connect" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click"/>
        <Button x:Name="CircleButton" Content="Color Circle" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CircleButton_Click"/>
        <Button x:Name="LevelsButton" Content="Color Levels" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LevelsButton_Click"/>

    </Grid>
